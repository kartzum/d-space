<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>local</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>local</baseDirectory>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>m.d.s.t:transformation:zip:all</include>
            </includes>
            <outputDirectory>cluster</outputDirectory>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>flows</directory>
            <outputDirectory/>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>flows/scripts/spaces/local</directory>
            <outputDirectory>/</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
</assembly>